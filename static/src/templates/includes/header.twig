<header class="messenger__current-chat current-chat">
    <div class="current-chat__wrapper">
        <div class="current-chat__image">
            <img width="34" height="34" src="assets/images/avatar.jpg" alt="avatar" />
        </div>
        <div class="current-chat__content">
            <h1 class="current-chat__name">Вадим</h1>
            <p class="current-chat__text">Был 5 минут назад</p>
        </div>
        <div class="current-chat__actives">
            <div class="tooltip tooltip--top-right js-tooltip {{tooltipsClass}}" data-tooltip="chat-options">
                <ul class="icon-buttons">
                    <li class="icon-buttons__item">
                        <button class="icon-buttons__btn js-focus-visible" type="button">
                            <svg width="22" height="19" viewBox="0 0 22 19" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <rect width="22" height="1.5" transform="matrix(1 0 0 -1 0 19)"
                                    fill="#40375C" />
                                <path fill-rule="evenodd" clip-rule="evenodd"
                                    d="M16.2602 0L19.0001 2.73982L16.9452 4.79468L14.2054 2.05487L16.2602 0ZM13.5202 2.73976L16.26 5.47958L6.7394 15.0002H4V12.26L13.5202 2.73976Z"
                                    fill="#40375C" />
                            </svg>

                            <span>Переименовать</span>
                        </button>
                    </li>
                    <li class="icon-buttons__item">
                        <button class="icon-buttons__btn js-focus-visible" type="button">
                            <svg width="22" height="22" viewBox="0 0 22 22" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <circle cx="11" cy="11" r="10.25" stroke="#40375C" stroke-width="1.5" />
                            </svg>
                            <span>Удалить</span>
                        </button>
                    </li>
                </ul>
            </div>
            <button class="current-chat__btn js-tooltip-trigger js-focus-visible" data-tooltip="chat-options" type="button">
                <svg width="3" height="16" viewBox="0 0 3 16" fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <circle cx="1.5" cy="2" r="1.5" fill="#40375C" />
                    <circle cx="1.5" cy="8" r="1.5" fill="#40375C" />
                    <circle cx="1.5" cy="14" r="1.5" fill="#40375C" />
                </svg>
            </button>
        </div>
    </div>
    <div class="current-chat__rename {{ renameClass }}">
        <form class="current-chat__rename-form js-form" method="POST">
            <input type="text" name="rename-chat" value="Фотография "/>
            <button class="button button--mini current-chat__rename-btn js-focus-visible" type="submit">Сохранить</button>
        </form>
    </div>                
</header>