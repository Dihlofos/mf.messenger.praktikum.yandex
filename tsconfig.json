{
    "compilerOptions": {
      "baseUrl": "./build/assets/js",
      "target": "ES6",
      "lib": ["esnext", "dom", "dom.iterable"],
      "outDir": "./build/assets/js",
      "declaration": true,
      "module": "ES6",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "types": [
      "handlebars",
      "node",
      "jest"
    ],
    "include": ["src/**/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts","**/*.mock.ts", "src/interface.ts", ]
  }
