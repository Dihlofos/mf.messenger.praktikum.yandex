{% extends 'templates/base.twig' %}

{% block title %}Messenger - регистрация
{% endblock %}

{% block page %}
	<main class="dark centered-content">
		<div class="entry-box">
			<h1 class="entry-box__title">Регистрация</h1>
			<form class="entry-box__form js-form" method="POST" onSubmit="formConsole(event); return false;">				
                <div class="entry-box__fields">
					<div class="field entry-box__field js-field">					
						<input id="email" type="email" name="email">
						<label for="email">Почта</label>
						<span class="field__error">Некорректно написано</span>
					</div>
					<div class="field entry-box__field js-field">					
						<input id="login" type="text" name="login">
						<label for="login">Логин</label>
						<span class="field__error"></span>
					</div>
					<div class="field entry-box__field is-error js-field">					
						<input class="is-error" id="password" type="password" name="password"  value="password" autocomplete="off">
						<label for="password">Пароль</label>
						<span class="field__error"></span>
					</div>
					<div class="field entry-box__field  js-field">					
						<input class="is-error" id="password_repeat" type="password" value="password" name="password_repeat" autocomplete="off">
						<label for="password_repeat">Пароль (еще раз)</label>
						<span class="field__error">Пароли не совпадают</span>
					</div>
					<div class="field entry-box__field  js-field">					
						<input id="first_name" type="text" name="first_name">
						<label for="first_name">Имя</label>
						<span class="field__error"></span>
					</div>
					<div class="field entry-box__field  js-field">					
						<input id="second_name" type="text" name="second_name">
						<label for="second_name">Фамилия</label>
						<span class="field__error"></span>
					</div>
					<div class="field entry-box__field  js-field">					
						<input id="phone" type="tel" name="phone">
						<label for="phone">Телефон</label>
						<span class="field__error"></span>
					</div>
				</div>

				<div class="entry-box__buttons">
					<button class="button entry-box__button js-focus-visible" type="submit">Зарегистрироваться</button>
					<a class="entry-box__link js-focus-visible" href="/login.html">Войти</a>  
				</div>		
			</form>

		</div>		
	</main> 
{% endblock %}
